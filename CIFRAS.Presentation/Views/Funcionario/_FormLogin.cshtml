@model CIFRAS.Application.ViewModel.LoginVm

<div class="form-group">
    @Html.EditorFor(m => m.Login, new { htmlAttributes = new { @class = "form-control", placeholder = "Login" } })
    @Html.ValidationMessageFor(m => m.Login)
</div>

<div class="form-group">
    @Html.EditorFor(m => m.Senha, new { htmlAttributes = new { @class = "form-control", placeholder = "Senha", type = "password" } })
    @Html.ValidationMessageFor(m => m.Senha)
</div>

<input type="submit" class="btn btn-primary btn-block" value="Acessar">