@model CIFRAS.Application.ViewModel.FuncionarioVm

<div class="row">
    <div class="col-lg-12">
        <div class="card mb-3">
            <div class="card-header">Geral</div>
            <div class="card-body">
                <div class="row">
                    <div class="form-group col-md-4">
                        @Html.LabelFor(m => m.Nome)
                        @Html.EditorFor(m => m.Nome, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.Nome)
                    </div>

                    <div class="form-group col-md-2">
                        @Html.LabelFor(m => m.Cpf)
                        @Html.EditorFor(m => m.Cpf, new { htmlAttributes = new { @class = "form-control cpf" } })
                        @Html.ValidationMessageFor(m => m.Cpf)
                    </div>

                    <div class="form-group col-md-2">
                        @Html.LabelFor(m => m.Cargo)
                        @Html.EnumDropDownListFor(m => m.Cargo, "Selecione...", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Cargo)
                    </div>

                    <div class="form-group col-md-2">
                        @Html.LabelFor(m => m.Login)
                        @Html.EditorFor(m => m.Login, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.Login)
                    </div>

                    <div class="form-group col-md-2">
                        @Html.LabelFor(m => m.Senha)
                        @Html.EditorFor(m => m.Senha, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                        @Html.ValidationMessageFor(m => m.Senha)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>