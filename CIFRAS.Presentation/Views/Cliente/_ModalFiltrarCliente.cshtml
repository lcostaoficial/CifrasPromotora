@model CIFRAS.Application.ViewModel.FiltroClienteVm
@{
    ViewBag.Title = "Filtro de Cliente";
}

<div class="modal fade" id="modalFiltrarCliente" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@ViewBag.Title</h5>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="form-group col-md-8 mb-3">
                        @Html.LabelFor(m => m.TipoClienteId)
                        @Html.DropDownListFor(x => x.TipoClienteId, new SelectList(ViewBag.TiposClientes, "TipoClienteId", "Descricao"), "Todos", new { @class = "form-control", required = "" })
                        @Html.ValidationMessageFor(m => m.TipoClienteId)
                    </div>
                    <div class="form-group col-md-4 mb-3">
                        @Html.LabelFor(m => m.Cidade)
                        @Html.EditorFor(m => m.Cidade, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.Cidade)
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnFiltrarCliente" type="button" class="btn btn-primary">Filtrar</button>
                <button id="btnCancelar" type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>