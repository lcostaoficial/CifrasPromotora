@model IEnumerable<CIFRAS.Application.ViewModel.ContaVm>

@if (Model != null && Model.Any())
{
    int i = 0;

    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Número Agência</th>
            <th>Número Conta</th>
            <th>Banco</th>
            <th>Ação</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NumeroAgencia</td>
                <td>@item.NumeroConta</td>
                <td>@item.BancoView</td>
                <td><a href="#" onclick="RemoverConta('@($"{ Url.Action("RemoverConta", "Cliente")}?index= {i}")');">Cancelar</a></td>
            </tr>
            i++;
        }
        </tbody>
    </table>
}