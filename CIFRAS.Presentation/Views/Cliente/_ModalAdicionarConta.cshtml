@model CIFRAS.Application.ViewModel.ContaVm
@{
    ViewBag.Title = "Dados da Conta";
}

<div class="modal fade" id="modalConfirmarConta" tabindex="-1" role="dialog" aria-hidden="true" data-add="@Url.Action("AdicionarConta", "Cliente")" data-reload="@Url.Action("AtualizarContas", "Cliente")">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@ViewBag.Title</h5>
            </div>
            <div class="modal-body">
                <div class="row"> 
                    <div class="form-group col-md-6 mb-3">
                        @Html.LabelFor(m => m.BancoId)
                        @Html.DropDownListFor(x => x.BancoId, new SelectList(ViewBag.Bancos, "BancoId", "Descricao"), "Selecione...", new { @class = "form-control", required = "" })
                        @Html.ValidationMessageFor(m => m.BancoId)
                    </div>
                    <div class="form-group col-md-3 mb-3">
                        @Html.LabelFor(m => m.NumeroAgencia)
                        @Html.EditorFor(m => m.NumeroAgencia, new {htmlAttributes = new {@class = "form-control", MaxLength = 100, required = ""}})
                        @Html.ValidationMessageFor(m => m.NumeroAgencia)
                    </div>
                    <div class="form-group col-md-3 mb-3">
                        @Html.LabelFor(m => m.NumeroConta)
                        @Html.EditorFor(m => m.NumeroConta, new {htmlAttributes = new {@class = "form-control", MaxLength = 100, required = ""}})
                        @Html.ValidationMessageFor(m => m.NumeroConta)
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnSalvarConta" type="submit" class="btn btn-primary">Salvar</button>
                <button id="btnCancelar" type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>