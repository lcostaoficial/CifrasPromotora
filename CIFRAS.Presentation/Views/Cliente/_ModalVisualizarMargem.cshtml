@model CIFRAS.Application.ViewModel.ClienteVm

<div class="modal fade" id="modalMargem" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Margem</h5>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="notice notice-primary">
                        <strong>Renda</strong> R$ @Model.RendaBruta
                    </div>
                    <div class="notice notice-info">
                        <strong>Margem Total</strong> R$ @Model.MargemTotal
                    </div>
                    <div class="notice notice-danger">
                        <strong>Margem Utilizada</strong> R$ @Model.MargemUtilizada
                    </div>
                    <div class="notice notice-success">
                        <strong>Margem Disponível</strong> R$ @Model.MargemDisponivel
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>