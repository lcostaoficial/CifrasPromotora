@model CIFRAS.Application.ViewModel.ReciboVm

<div class="row">
    <div class="col-lg-12">
        <div class="card mb-3">
            <div class="card-header">Concedente</div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-7 mb-3">
                        @Html.LabelFor(m => m.NomeFantasiaConcedente)
                        @Html.EditorFor(m => m.NomeFantasiaConcedente, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.NomeFantasiaConcedente)
                    </div>
                    <div class="col-md-2 mb-3">
                        @Html.LabelFor(m => m.TelefoneConcedente)
                        @Html.EditorFor(m => m.TelefoneConcedente, new { htmlAttributes = new { @class = "form-control telefone" } })
                        @Html.ValidationMessageFor(m => m.TelefoneConcedente)
                    </div>
                    <div class="col-md-3 mb-3">
                        @Html.LabelFor(m => m.CustoTed)
                        @Html.EditorFor(m => m.CustoTed, new { htmlAttributes = new { @class = "form-control money" } })
                        @Html.ValidationMessageFor(m => m.CustoTed)
                    </div>
                    <div class="col-md-3 mb-3">
                        @Html.LabelFor(m => m.OutrosDescontos)
                        @Html.EditorFor(m => m.OutrosDescontos, new { htmlAttributes = new { @class = "form-control money" } })
                        @Html.ValidationMessageFor(m => m.OutrosDescontos)
                    </div>
                    <div class="col-md-9 mb-3">
                        @Html.LabelFor(m => m.Observacoes)
                        @Html.EditorFor(m => m.Observacoes, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.Observacoes)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card mb-3">
            <div class="card-header">Corretor</div>
            <div class="card-body">
                <div class="row">
                    <div class="form-group col-md-12 mb-3">
                        @Html.LabelFor(m => m.CorretorId)
                        @Html.DropDownListFor(x => x.CorretorId, new SelectList(ViewBag.Corretores, "CorretorId", "Nome"), "Selecione...", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.CorretorId)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="hr">
    <span class="hr-title">Empréstimos</span>
</div>

<div class="row">
    <div class="col-md-12 mb-3">
        <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#modalConfirmarEmprestimo">
            Adicionar Empréstimo
        </button>
    </div>
    <div id="ListaReciboEmprestimo" class="col-lg-12"></div>
</div>