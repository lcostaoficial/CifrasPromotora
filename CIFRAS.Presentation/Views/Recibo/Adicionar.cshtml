@using CIFRAS.Application.ViewModel
@model ReciboVm
@{
    ViewBag.Title = "Recibo";
    ViewBag.Subtitle = "Novo";
}

@Html.Partial("_TitleForm")

@using (Html.BeginForm("Adicionar", "Recibo", FormMethod.Post))
{
