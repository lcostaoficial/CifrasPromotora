@model CIFRAS.Application.ViewModel.BancoVm

<div class="row">
    <div class="col-lg-12">
        <div class="card mb-3">
            <div class="card-header">Geral</div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8 mb-3">
                        @Html.LabelFor(m => m.Descricao)
                        @Html.EditorFor(m => m.Descricao, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.Descricao)
                    </div>
                    <div class="col-md-2 mb-3">
                        @Html.LabelFor(m => m.Sigla)
                        @Html.EditorFor(m => m.Sigla, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.Sigla)
                    </div>
                    <div class="col-md-2 mb-3">
                        @Html.LabelFor(m => m.CodigoBanco)
                        @Html.EditorFor(m => m.CodigoBanco, new { htmlAttributes = new { @class = "form-control numero" } })
                        @Html.ValidationMessageFor(m => m.CodigoBanco)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>