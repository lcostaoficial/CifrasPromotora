@using CIFRAS.Application.ViewModel
@model FuncionarioVm

<div class="modal fade" id="modalPerfil" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Perfil</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="Nome">Nome</label>
                    <input type="text" class="form-control" id="Nome" value="@Model.Nome" disabled="">                   
                </div>
                <div class="form-group">
                    <label for="Cpf">CPF</label>
                    <input type="text" class="form-control" id="Cpf" value="@Model.Cpf" disabled="">
                </div>
                <div class="form-group">
                    <label for="Cargo">Cargo</label>
                    <input type="text" class="form-control" id="Cargo" value="@Model.Cargo" disabled="">
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>